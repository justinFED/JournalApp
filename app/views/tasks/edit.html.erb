<!-- Edit Task Form -->
<div class="row mt-5">
  <div class="col-md-8 offset-md-2">
    <h2>Edit Task</h2>
    <%= form_for(@task, url: task_path(@task), method: :patch) do |form| %>
      <div class="form-group">
        <%= form.label :name, "Task Name" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter task name", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :category_id, "Category" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select category" }, class: "form-control", required: true %>
      </div>
      <%= form.submit "Update Task", class: "btn btn-primary" %>
    <% end %>
    
    <!-- Delete Button -->
    <div class="mt-3">
  <%= form_with(model: @task, method: :delete, url: task_path(@task), data: { confirm: "Are you sure?" }) do |form| %>
    <%= form.submit "Delete Task", class: "btn btn-danger" %>
  <% end %>
</div>

    <%= link_to "Cancel", tasks_path, class: "btn btn-secondary mt-3" %>
  </div>

</div>
