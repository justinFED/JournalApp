<!DOCTYPE html>
<html>
<head>
  <title>JournalApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
      background-color: #f5f5f5;
    }

    .container-fluid {
      flex: 1;
      display: flex;
    }

    .sidebar {
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      z-index: 1000;
      padding-top: 56px;
      height: 100vh;
      overflow-y: auto;
      background-color: #f8f9fa; 
    }

    .main-content {
      flex: 1;
      padding-left: 240px;
    }

    .sidebar-titles {
      text-align: center;
      margin-bottom: 20px;
      
    }

    .sidebar-titles p {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }

  </style>
</head>

<body>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
    <!-- Left Sidebar -->
    <nav class="col-md-2 d-none d-md-block sidebar w min-vh-100" style="background-color: #ffffff;">
      <div class="sidebar-sticky">
        <div class="sidebar-titles">
          <p class="h6 font-weight-bold text-dark" style="font-size: 14px;">Time and Date</p>
          <p id="currentDateTime" class="text-secondary"></p>
        </div>
    
        <hr class="mt-3 mb-3">
    
        <ul class="nav flex-column">
  <li class="nav-item">
    <%= link_to landing_path, class: "nav-link active text-dark" do %>
      <i class="fas fa-home"></i> Home
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to tasks_path, class: "nav-link text-dark" do %>
      <i class="fas fa-tasks"></i> Tasks
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to categories_path, class: "nav-link text-dark" do %>
      <i class="fas fa-folder"></i> Categories
    <% end %>
  </li>
</ul>

    
        <!-- Border line below categories -->
        <hr class="mt-3 mb-3">
        
        <!-- Additional options -->
<div class="sidebar-titles">
  <p class="h6 font-weight-bold text-dark" style="font-size: 14px;">Journal Options</p>
</div>
<ul class="nav flex-column">
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-compass"></i> Explore Journals
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-plus"></i> Create New Journal
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-book"></i> My Journals
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-cog"></i> Journal Settings
    </a>
  </li>
  <!-- Additional Options -->
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-search"></i> Search Journals
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-calendar-alt"></i> Journal Calendar
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-tag"></i> Tags & Categories
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-share"></i> Share Journal
    </a>
  </li>
  <!-- More Options -->
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-pencil-alt"></i> Edit Entry
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-trash"></i> Delete Journal
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-dark" href="#">
      <i class="fas fa-archive"></i> Archive Journal
    </a>
  </li>
</ul>
<!-- Logout Button -->
<div class="mt-auto text-center">
  <%= link_to 'Logout', login_users_path, method: :delete, class: 'btn btn-danger mt-3' %>
</div>
</div>
</nav>

</div>

    <!-- Main Page Content -->
<div class="col-md-8 offset-md-1">
  <div class="text-center">
    <h1 class="display-4">Tasks</h1>
    <p class="lead">Manage Your Tasks</p>
  </div>

  <div class="row mt-5">
  <div class="col-md-8 offset-md-2">
    <h2>Create a New Task</h2>
    <%= form_with(model: Task.new, url: tasks_path, method: :post) do |form| %>
      <div class="form-group">
        <%= form.label :name, "Task Name" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter task name", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :category_id, "Category" %>
        <%= form.collection_select :category_id, @categories, :id, :name, { prompt: "Select category" }, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :due_date, "Due Date" %>
        <%= form.date_field :due_date, class: "form-control", required: true %>
      </div>
      <%= form.submit "Create Task", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<!-- Display Tasks -->
<div class="row mt-5">
  <% @categories.each do |category| %>
    <div class="col-md-6">
      <h2><%= category.name %></h2>
      <ul class="list-group">
        <% category.tasks.each do |task| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= task.name %>
            <span class="badge badge-primary highlighted-due-date"><%= task.due_date ? task.due_date.strftime('%b %e, %Y') : 'Not set' %></span>
            <div class="btn-group" role="group">
              <%= link_to "Edit", edit_task_path(task), class: "btn btn-warning btn-sm" %>
            </div>
            

          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

    <!-- Time and Date -->

<script>
  function updateDateTime() {
    const now = new Date();
    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true };
    const formattedDateTime = now.toLocaleDateString('en-US', options);
    document.getElementById('currentDateTime').innerText = formattedDateTime;
  }

  updateDateTime();

  setInterval(updateDateTime, 1000);
</script>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>