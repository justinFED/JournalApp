<!DOCTYPE html>
<html>
<head>
  <title>JournalApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha384-rkCrG5OxyK7jo+JL7KK9E6rtTBE2lBUeOhfM6c8a09fXzveH4R3eifDUIHy8W1OF1" crossorigin="anonymous">
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }

    .container-fluid {
      flex: 1;
      display: flex;
    }

    .sidebar {
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      z-index: 1000;
      padding-top: 56px;
      height: 100vh;
      overflow-y: auto;
      background-color: #f8f9fa; 
    }

    .main-content {
      flex: 1;
      padding-left: 240px;
    }

    .sidebar-titles {
      text-align: center;
      margin-bottom: 20px;
      
    }

    .sidebar-titles p {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }
  </style>
</head>

<body>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
      <!-- Left Sidebar -->
      <nav class="col-md-2 d-none d-md-block sidebar w min-vh-100">
        <div class="sidebar-sticky">
          <div class="sidebar-titles">
            <p class="h6 font-weight-bold" style="font-size: 14px;">Time and Date</p>
            <p id="currentDateTime" class="text-secondary"></p>
          </div>

          <hr class="mt-3 mb-3">

          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="#">
                Home
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                Tasks
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                Calendar
              </a>
            </li>
          </ul>

          <!-- Border line below categories -->
          <hr class="mt-3 mb-3">
          <!-- Additional options -->
          <div class="sidebar-titles">
            <p class="h6 font-weight-bold" style="font-size: 14px;">Categories</p>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="#">
                My Categories
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                Create New Category
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <div class="col-md-8 offset-md-1">
      <!-- Main Content -->
      <div class="text-center">
        <!-- Your content here -->
        <h1 class="display-4">Welcome to Your Journal App</h1>
        <p class="lead">Stay organized and productive with your tasks and thoughts.</p>

        <div class="row mt-4">
          <div class="col-md-6">
            <h2>Tasks for Today</h2>
            <ul class="list-group">
              <% @tasks_today.each do |task| %>
                <li class="list-group-item"><%= task.details_for_view %></li>
              <% end %>
            </ul>
          </div>

          <div class="col-md-6">
            <h2>All Tasks</h2>
            <ul class="list-group">
              <% @tasks.each do |task| %>
                <li class="list-group-item"><%= task.details_for_view %></li>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="row mt-4">
          <div class="col-md-8 offset-md-2 text-center">
            <%= link_to "Create a New Task", new_task_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function updateDateTime() {
    const now = new Date();
    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true };
    const formattedDateTime = now.toLocaleDateString('en-US', options);
    document.getElementById('currentDateTime').innerText = formattedDateTime;
  }

  updateDateTime();

  setInterval(updateDateTime, 1000);
</script>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
