<!-- Edit Category Form -->
<div class="row mt-5">
  <div class="col-md-8 offset-md-2">
    <h2>Edit Category</h2>
    <%= form_for(@category, url: category_path(@category), method: :patch) do |form| %>
      <div class="form-group">
        <%= form.label :name, "Category Name" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter category name", required: true %>
      </div>
      <%= form.submit "Update Category", class: "btn btn-primary" %>
    <% end %>
    <div class="mt-3">
    <%= link_to "Cancel", categories_path, class: "btn btn-secondary mt-3" %>
  </div>
</div>
